@model List<Empleado>

<h1>Buscar Empleados</h1>

<form method="post">

    <label>Oficio</label>
    <input type="text" name="oficio" class="form-control" />
    <br />

    <label>Salario</label>
    <input type="number" name="salario" class="form-control" />
    <br />

    <button type="submit" class="btn btn-secondary">Buscar Empleados</button>
</form>

@if (Model != null)
{


<table class="table table-active">
        <thead class="table table-danger">
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model) {
            
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}




