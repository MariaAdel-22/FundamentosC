@model IEnumerable<MvcCoreCrudHospitales.Models.Hospital>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Hospital" asp-action="Create">Nuevo Hospital</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdHospital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Camas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdHospital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Camas)
            </td>
            <td>
                <a asp-controller="Hospital" asp-action="ResumenDoctores" asp-route-idhospital="@item.IdHospital">Doctores</a>
                <a asp-controller="Hospital" asp-action="Edit" asp-route-id="@item.IdHospital">Edit</a>
                <a asp-controller="Hospital" asp-action="Details" asp-route-id="@item.IdHospital">Details</a>
                <a asp-controller="Hospital" asp-action="Delete" asp-route-id="@item.IdHospital">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
