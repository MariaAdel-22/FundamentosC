@model List<Empleado>

@{ 
    List<string> oficios = ViewData["OFICIOS"] as List<string>;
}

<h1>Empleados Salario</h1>

<form method="post">
    <label>Oficios:</label>
    <select name="oficio" class="form-control">
        @foreach (string ofi in oficios) { 
            <option value="@ofi">@ofi</option>
        }
    </select>
    <br/>

    <label>Incremento salarial:</label>
    <input type="text" name="incremento" class="forom-control" required/>
    <br/>
    <button type="submit" class="btn btn-outline-info">Incrementar salarios</button>
</form>

<hr/>

<table class="table table-info">
   <thead>
       <tr>
           <th>Apellido</th>
           <th>Oficio</th>
           <th>Fecha alta</th>
           <th>Salario</th>
       </tr>
   </thead>
    <tbody>
        @foreach (Empleado emp in Model) { 

            <tr>
                <td>@emp.Apellido</td>
                <td>@emp.Oficio</td>
                <td>@emp.FechaAlta.ToLongDateString()</td>
                <td style="background-color:lightblue">@emp.Salario</td>
            </tr>
        }
    </tbody>
</table>