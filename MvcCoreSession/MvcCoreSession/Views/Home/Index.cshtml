@{
    ViewData["Title"] = "Home Page";
}


<!--Recuperamos el JSON que está en el session-->

@{ 
    List<Persona> personas = null;

    if (Context.Session.GetString("PERSONAS") != null) {

        string data = Context.Session.GetString("PERSONAS");
        
        personas = (List<Persona>)HelperSession.DeserializeObject(data, typeof(List<Persona>));

    }

}

<div class="text-center">

    @if (Context.Session.GetString("PERSONAS") != null) {

        <h1 style="color:red">Personas almacenadas en Session: @personas.Count()</h1>

     }

      @if (Context.Session.GetString("Hora") !=null) { 

          <h1 style="color:red">@Context.Session.GetString("Hora")</h1>
      }

</div>