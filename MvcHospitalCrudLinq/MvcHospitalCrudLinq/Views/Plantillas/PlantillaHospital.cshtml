@model ModelPlantillas

<h1>Plantilla Hospital Lambda</h1>

<a asp-controller="Hospitales" asp-action="Index">Index de Hospital</a>

<ul class="list-group">

    <li class="list-group-item">Personas: @Model.Personas</li>
    <li class="list-group-item">Suma Salarial: @Model.SumaSalarial</li>
    <li class="list-group-item">Media Salarial: @Model.MediaSalarial</li>

</ul>

<table class="table table-active">
    <thead class="table table-danger">
        <tr>
            <th>Apellido</th>
            <th>Turno</th>
            <th>Funcion</th>
            <th>Salario</th>
            <th>Hospital</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Plantilla pl in Model.Plantillas) { 
        
            <tr>
                <td>@pl.Apellido</td>
                <td>@pl.T</td>
                <td>@pl.Funcion</td>
                <td>@pl.Salario</td>
                <td>@pl.Hospital_Cod</td>
            </tr>
        }
    </tbody>
</table>