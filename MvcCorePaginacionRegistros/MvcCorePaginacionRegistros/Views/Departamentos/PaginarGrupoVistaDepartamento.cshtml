@model IEnumerable<MvcCorePaginacionRegistros.Models.VistaDepartamentoRegistro>

@{
    ViewData["Title"] = "PaginarGrupoVistaDepartamento";
    List<int> posiciones = ViewData["POSICIONES"] as List<int>;
    int contador = 1;
}

<h1>PaginarGrupoVistaDepartamento</h1>

<div>

    @foreach (int pos in posiciones) {

        <a asp-controller="Departamentos" asp-action="PaginarGrupoVistaDepartamento" asp-route-posicion="@pos">Pagina @contador</a>

        contador += 1;
    }

</div>
<hr/>

<table class="table table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posicion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posicion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
