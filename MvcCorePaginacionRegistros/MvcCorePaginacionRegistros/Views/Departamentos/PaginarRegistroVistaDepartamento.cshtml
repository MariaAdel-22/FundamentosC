@model MvcCorePaginacionRegistros.Models.VistaDepartamentoRegistro

@{
    ViewData["Title"] = "PaginarRegistroVistaDepartamento";
}

<h1>Paginar Registro VistaDepartamento</h1>

<h2 style="color:blue">
    Registro @Model.Posicion de @ViewData["ULTIMO"]
</h2>

<div>
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item list-group-item-warning">
            <a asp-controller="Departamentos" asp-action="PaginarRegistroVistaDepartamento" asp-route-posicion="1">Primero</a>
        </li>
        <li class="list-group-item list-group-item-warning">
            <a asp-controller="Departamentos" asp-action="PaginarRegistroVistaDepartamento" asp-route-posicion="@ViewData["ANTERIOR"]">Anterior</a>
        </li>
        <li class="list-group-item list-group-item-warning">
            <a asp-controller="Departamentos" asp-action="PaginarRegistroVistaDepartamento" asp-route-posicion="@ViewData["SIGUIENTE"]">Siguiente</a>
        </li>
        <li class="list-group-item list-group-item-warning">
            <a asp-controller="Departamentos" asp-action="PaginarRegistroVistaDepartamento" asp-route-posicion="@ViewData["ULTIMO"]">Último</a>
        </li>
    </ul>
</div>

<div>
    <h4>VistaDepartamentoRegistro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Número
        </dt>
        <dd class = "col-sm-10">
            @Model.IdDepartamento
        </dd>
        <dt class = "col-sm-2">
           Nombre
        </dt>
        <dd class = "col-sm-10">
           @Model.Nombre
        </dd>
        <dt class = "col-sm-2">
           Localidad
        </dt>
        <dd class = "col-sm-10">
            @Model.Localidad
        </dd>
        <dt class = "col-sm-2">
            Posicion
        </dt>
        <dd class = "col-sm-10">
            @Model.Posicion
        </dd>
    </dl>
</div>
