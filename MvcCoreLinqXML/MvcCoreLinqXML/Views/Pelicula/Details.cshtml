@model MvcCoreLinqXML.Models.Pelicula

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pelicula</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdPelicula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPelicula)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TituloOriginal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TituloOriginal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Poster)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Poster" width="200" height="200"/>
        </dd>
    </dl>
</div>
<div id="escenas">
  
</div>


@section Scripts{ 

<script>
    $(document).ready(function () {

        var id = "@Model.IdPelicula";
        $("#escenas").load("/Pelicula/_EscenasPeliculas?id="+id);
    });
</script>

}