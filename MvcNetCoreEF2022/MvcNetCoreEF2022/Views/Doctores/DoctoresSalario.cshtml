@model List<Doctor>

@{

    List<Doctor> doctores = (List<Doctor>)ViewData["DOCTORES"];
 }

<h1>Doctores por salario</h1>


<form method="post">

    <label class="form-check-label">Introducir salario:</label>
    <input type="number" class="form-control" name="salario"/>
    <button type="submit" class="btn btn-secondary">Cargar Empleados</button>
</form>

@if(Model == null && doctores == null){
    <h1 style="color:red">No existen doctores con esa cantidad de salario...</h1>
}

<table class="table table-active">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Especialidad</th>
            <th>Salario</th>
            <th>Hospital</th>
        </tr>
    </thead>
    <tbody>

        @if(doctores != null){
            foreach (Doctor d in doctores)
            {

                <tr>
                    <td>@d.Apellido</td>
                    <td>@d.Especialidad</td>
                    <td>@d.Salario</td>
                    <td>@d.IdHospital</td>
                </tr>
            }
        }


        @if (Model != null)
        {
            @foreach (Doctor d in Model)
            {

                <tr>
                    <td>@d.Apellido</td>
                    <td>@d.Especialidad</td>
                    <td>@d.Salario</td>
                    <td>@d.IdHospital</td>
                </tr>
            }

        }

    </tbody>
</table>

