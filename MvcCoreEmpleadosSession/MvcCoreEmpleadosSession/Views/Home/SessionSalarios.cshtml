@model List<Empleado>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Session Empleados Salario</h1>

<a asp-controller="Home" asp-action="SumaSalarios">Mostrar Suma de salarios almacenados</a>

<h4 style="color:red">@ViewData["MENSAJE"]</h4>


@if (Model != null)
{

<table class="table table-active">
        <thead class="table bg-danger">

            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
                <th>Realizar Session</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Empleado emp in Model) { 
                
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                    <td><a asp-controller="Home" asp-action="SessionSalarios" asp-route-salario="@emp.Salario">Almacenar Salario</a></td>
                </tr>
            }
        </tbody>

    </table>
}
