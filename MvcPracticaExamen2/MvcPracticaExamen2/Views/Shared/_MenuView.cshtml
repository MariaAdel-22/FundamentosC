@if (Context.User.Identity.IsAuthenticated == false)
{
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Doctor" asp-action="ListadoDoctores">Doctores</a>
                </li>
                <li class="nav-item">
                    <span id="group">
                        <a asp-controller="Doctor" asp-action="Carrito" class="nav-link">

                            @if (Context.Session.GetString("Notificacion") != null)
                            {
                                string val = Context.Session.GetString("Notificacion");

                                <span class="badge badge-light" id="canProd">@int.Parse(val)</span>
                            }
                            else
                            {
                                <span class="badge badge-light" id="canProd">0</span>
                            }

                            <i class="fa fa-shopping-cart"></i>
                        </a>
                    </span>
                </li>
            </ul>
        </div>
    </nav>


}
